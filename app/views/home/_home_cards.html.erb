
    <% post_list.each do |post| %> 
      <div class="card" style="width: 18rem;">
        <% if post.poster.attached? %>
          <%= image_tag(post.poster, class: "card-img-top", alt: "Card image cap") %>
        <% else %>
          <%= image_tag('default_book_avatar.jpeg', class: "index-img") %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title">post.name</h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= post.score %></li>
          <li class="list-group-item"><%= post.release_date %></li>
        </ul>
        <div class="card-body">
          <%= link_to 'DETAIL', post_path(post) %>
        </div>
      </div>
    <% end %>