<div class="container my-5">
  <div class="card">
    <div class="card-body">
      <% if current_user.avatar.attached? %>
        <%= image_tag(url_for(current_user.avatar), class: "img-circular") %>
      <% else %>
        <%= image_tag('default_user_avatar.jpeg', class: "img-circular") %>
      <% end %>
       <h1><%=current_user.name %> Profile</h1>
       <div>
       <% if current_user.id == @user.id %>
        <%= link_to "UPDATE", edit_user_registration_path(id: current_user.id), class: "btn btn-primary btn-sm" %>
        <%= link_to 'Delete', user_path(current_user), class: "btn btn-danger btn-sm", method: :delete %>
       <% end %>
       </div>
      <table class="table">
        <tr>
          <th>Name</th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
        <th>Email</th>
        <td><%= current_user.email %></td>
        </tr>
        <tr>
      </table>
      <div>
      </div>
    </div>
  </div>
</div>
