<div class="container my-4">
  <div class="card">
    <div class="card-body">
      <h1>List of Users:</h1>
      <% if current_user.admin %>
        <div class="button">
          <%= link_to('Create a New User admin', new_user_path, class: "btn btn-success float-end btn-lg") %>
        </div>
      <% end %>
      <table class="table table-hover">
        <tbody>
          <% @users.each.with_index(1) do |user, index| %>
            <tr><td><%= calculate_serial(User, index) %></td>
              <td><%= user.name %></td>
              <td><%= user.created_at.strftime("%d-%m-%Y") %></td>
                <%= link_to 'Show',
                            user_path(user),
                            class: "btn btn-primary btn-sm" %>

                <%= link_to 'Delete',
                            user,
                            class: "btn btn-danger btn-sm",
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br/>
</div>
